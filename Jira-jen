Slide 9 â€“ Jenkins Pipeline Example

pipeline {
    parameters {
        string(name: 'JiraIssueKey', defaultValue: '')
    }

    stages {
        stage('Validate Jira') {
            steps {
                script {
                    if (!params.JiraIssueKey) {
                        error "Missing Jira Issue Key!"
                    }
                }
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean install"
            }
        }
        stage('Update Jira') {
            steps {
                jiraIssueUpdater issueKey: params.JiraIssueKey,
                                 comment: "Build ${BUILD_NUMBER} completed"
            }
        }
    }
}


